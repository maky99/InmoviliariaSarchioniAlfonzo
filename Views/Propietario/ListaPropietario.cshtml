@model IEnumerable<InmoviliariaSarchioniAlfonzo.Models.Propietario>

@{
    ViewData["Title"] = "Lista de Propietarios";
}
<style>
    body {
        background-image: url('/images/propietario.jfif');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
        height: 100%;
    }

    .text-center {
        color: rgb(44, 170, 201);
        /* Cambia el color del texto si es necesario para que sea legible sobre la imagen */
    }
</style>

<div class="text-center">
    <h1 class="display-3">Propietarios</h1>
    <div class="mb-3">
        <a asp-action="EditarPropietario" class="btn btn-success">Nuevo Registro</a>
    </div>





    <div class="mb-3">
        <!-- Campo de búsqueda -->
        <input type="text" id="inputBusqueda" placeholder="Buscar..." onkeyup="filtrarTabla()">
    </div>
    <table class="table" style="color: rgb(13, 12, 14); background-color: white;">
        <thead>
            <tr>
                <th>DNI</th>
                <th>Apellido</th>
                <th>Nombre</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th>Direccion</th>
                <th>Estado</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Dni</td>
                    <td>@item.Apellido</td>
                    <td>@item.Nombre</td>
                    <td>@item.Telefono</td>
                    <td>@item.Email</td>
                    <td>@item.Direccion</td>
                    <td>
                        @switch (item.Estado_Propietario)
                        {
                            case 0:
                                <span>Inactivo</span>
                                break;
                            case 1:
                                <span>Activo</span>
                                break;
                            case 2:
                                <span>Inactivo/Moroso</span>
                                break;
                            case 3:
                                <span>Inactivo/Desalojado</span>
                                break;
                        }
                    </td>
                    <td>
                        <!-- Enlace para editar -->
                        <a href="@Url.Action("EditarPropietario", "Propietario", new { id = item.Id_Propietario })"
                            class="btn btn-primary">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>


                        <!-- Enlace para eliminar -->
                        <a href="EliminarPropietario/@item.Id_Propietario"
                            onclick="return confirm('¿Estás seguro de que deseas eliminar a @item.Apellido @item.Nombre?')"
                            class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function filtrarTabla() {
            var input, filtro, tabla, filas, celdas, texto;
            input = document.getElementById("inputBusqueda");
            filtro = input.value.toUpperCase();
            tabla = document.querySelector(".table");
            filas = tabla.getElementsByTagName("tr");

            for (var i = 0; i < filas.length; i++) {
                celdas = filas[i].getElementsByTagName("td");
                var mostrar = false;

                for (var j = 0; j < celdas.length; j++) {
                    texto = celdas[j].textContent || celdas[j].innerText;
                    if (texto.toUpperCase().indexOf(filtro) > -1) {
                        mostrar = true;
                        break;
                    }
                }

                filas[i].style.display = mostrar ? "" : "none";
            }
        }
    </script>
}
