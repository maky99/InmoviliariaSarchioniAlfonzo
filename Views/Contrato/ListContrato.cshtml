@model IEnumerable<InmoviliariaSarchioniAlfonzo.Models.Contrato>

@{
    ViewData["Title"] = "Lista de Contratos";
}

<link rel="stylesheet" href="~/fondo/inmueble.css" />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show temp-message" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show temp-message" role="alert">
        @TempData["InfoMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show temp-message" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="text-center">
    <h1 class="display-3">Contratos</h1>
    <div class="mb-3">
        <a asp-action="EditarContrato" class="btn btn-success" title="Cargar Nuevo Contrato">
            <i class="fa-solid fa-house"></i> Nuevo
        </a>
    </div>
    <div class="mb-3">
        <!-- Campo de búsqueda -->
        <input type="text" id="inputBusqueda" placeholder="Buscar..." onkeyup="filtrarTabla()">
    </div>
    <table class="table" style="color: rgb(13, 12, 14); background-color: white;">
        <thead>
            <tr>
                <th>Id Contrato</th>
             @*   <th>Id Inmueble</th>*@
                <th>Uso</th>
                <th>Direccion</th>
                <th>Tipo</th>
            @*    <th>Id Propietario</th>*@
                <th>Nombre Pro</th>
                <th>Ape Pro</th>
                <th>nombre Inq</th>
                <th>Ape Inquilino</th>
             @*   <th>Id Inquilino</th>*@
                <th>Fecha Inicio</th>
                <th>Fecha Finalizacion</th>
                <th>Monto</th>
            @*  <th>Finalizacion Anticipada</th> *@
            @* <th>Id Creado Por</th> *@
            @* <th>Id Terminado</th> *@
            @* <th>Estado Contrato</th> *@
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var rowClass = item.Estado_Contrato == 0 ? "inactivo" : "";
                <tr class="@rowClass">
                    <td>@item.Id_Contrato</td> 
                   @* <td>@item.Id_Inmueble</td>*@
                    <td>@item.inmueble.Uso</td>
                    <td>@item.inmueble.Direccion</td>
                     <td>@item.tipo_inmueble.Tipo</td>
                  @*  <td>@item.Id_Propietario</td>*@
                    <td>@item.propietario.Nombre</td>
                    <td>@item.propietario.Apellido</td>
                  @*  <td>@item.Id_Inquilino</td>*@
                    <td>@item.inquilino.Nombre</td>
                    <td>@item.inquilino.Apellido</td>
                     <td>@item.Fecha_Inicio</td> 
                     <td>@item.Fecha_Finalizacion</td>
                    <td>@item.Monto</td>
                 @* <td>@item.Finalizacion_Anticipada</td> *@
                 @* <td>@item.Id_Creado_Por</td> *@
                 @* <td>@item.Id_Terminado_Por</td> *@
                   
                    @* <td>
                @if (item.Estado_Contrato == 1)
                {
                <span>Activo</span>
                }
                else
                {
                <span>Inactivo</span>
                }
                @* </td> *@
                    <td>
                        <!-- Enlace para editar -->
                        <a href="@Url.Action("EditarContrato", new { id = item.Id_Contrato })" class="btn btn-primary"
                            title="Editar información">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>

                        <!-- Enlace para desactivar -->
                        <a href="@Url.Action("DetalleContrato", new { id = item.Id_Contrato })"
                            title="Informacion del Inmueble">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
</div>
<script src="~/js/site.js"></script>