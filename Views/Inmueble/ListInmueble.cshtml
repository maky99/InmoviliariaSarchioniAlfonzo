@model IEnumerable<InmoviliariaSarchioniAlfonzo.Models.Inmueble>

@{
    ViewData["Title"] = "Lista de Inmuebles";
}

<link rel="stylesheet" href="~/fondo/inmueble.css" />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["InfoMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="text-center">
    <h1 class="display-3">Inmuebles</h1>
    <div class="mb-3">
        <a asp-action="NuevoInmueble" class="btn btn-success" title="Cargar Nuevo Inmueble">
            <i class="fa-solid fa-house"></i> Nuevo
        </a>
    </div>
    <div class="mb-3">
        <!-- Campo de búsqueda -->
        <input type="text" id="inputBusqueda" placeholder="Buscar..." onkeyup="filtrarTabla()">
    </div>
    <table class="table" style="color: rgb(13, 12, 14); background-color: white;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Dirección</th>
                <th>Uso</th>
                <th>Ambientes</th>
                <th>Coordenadas</th>
                <th>Tamaño</th>
                <th>Tipo de Inmueble</th>
                <th>Servicios</th>
                <th>Baño</th>
                <th>Cochera</th>
                <th>Patio</th>
                <th>Precio</th>
                <th>Condición</th>
                <th>Estado</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id_Inmueble</td>
                    <td>@item.Direccion</td>
                    <td>@item.Uso</td>
                    <td>@item.Ambientes</td>
                    <td>@item.Coordenadas</td>
                    <td>@item.Tamano</td>
                    <td>@item.Tipo_Inmueble</td>
                    <td>@item.Servicios</td>
                    <td>@item.Bano</td>
                    <td>@item.Cochera</td>
                    <td>@item.Patio</td>
                    <td>@item.Precio</td>
                    <td>@item.Condicion</td>
                    <td>
                        @if (item.Estado_Inmueble == 1)
                        {
                            <span>Activo</span>
                        }
                        else
                        {
                            <span>Inactivo</span>
                        }
                    </td>
                    <td>
                        <!-- Enlace para editar -->
                        <a href="@Url.Action("EditarInmueble", new { id = item.Id_Inmueble })" class="btn btn-primary"
                            title="Editar información">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>

                        <!-- Enlace para desactivar -->
                        <a href="@Url.Action("CambioEstado", new { id = item.Id_Inmueble })"
                            onclick="return confirm('¿Estás seguro de que deseas cambiar el estado del inmueble @item.Direccion?')"
                            class="btn btn-danger" title="Cambiar Estado del Inmueble">
                            <i class="fa-solid fa-minus-circle"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function filtrarTabla() {
            var input, filtro, tabla, filas, celdas, texto;
            input = document.getElementById("inputBusqueda");
            filtro = input.value.toUpperCase();
            tabla = document.querySelector(".table");
            filas = tabla.getElementsByTagName("tr");

            for (var i = 0; i < filas.length; i++) {
                celdas = filas[i].getElementsByTagName("td");
                var mostrar = false;

                for (var j = 0; j < celdas.length; j++) {
                    texto = celdas[j].textContent || celdas[j].innerText;
                    if (texto.toUpperCase().indexOf(filtro) > -1) {
                        mostrar = true;
                        break;
                    }
                }

                filas[i].style.display = mostrar ? "" : "none";
            }
        }
    </script>
}
